# 服务器配置
STAGING_SERVER=staging.example.com
STAGING_PORT=22
STAGING_USER=deploy

# 数据库配置
DB_HOST=staging-db.example.com
DB_PORT=5432
DB_NAME=knowledge_graph
DB_USER=app_user

# 应用配置
APP_ENV=staging
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0
APP_LOG_LEVEL=INFO

# 缓存配置
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_DB=0

# 存储配置
STORAGE_TYPE=s3
STORAGE_BUCKET=kg-staging
STORAGE_REGION=us-west-2

# 监控配置
MONITOR_ENABLED=true
MONITOR_ENDPOINT=https://monitoring.example.com
MONITOR_API_KEY=${MONITOR_API_KEY}

# 通知配置
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
EMAIL_NOTIFICATIONS=team@example.com

# 性能配置
MAX_WORKERS=4
BATCH_SIZE=1000
CACHE_TTL=3600

# 安全配置
CORS_ORIGINS=https://staging.example.com
JWT_SECRET=${JWT_SECRET}
API_RATE_LIMIT=100
